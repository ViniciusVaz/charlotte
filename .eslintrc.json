{
    "extends": "airbnb-base",
    "rules": {
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "never"
        ],
        "eol-last": [
            "error",
            "never"
        ],
        "indent": [
            "error",
            4
        ],
        "comma-dangle": [
            "error", 
            "never"
        ],
        "object-shorthand": [
            "error",
            "never"
        ],
        "one-var": [
            "error",
            "always"
        ],
        "comma-style": [
            "error", 
            "first", 
            { 
                "exceptions": 
                    { 
                        "ArrayExpression": true, 
                        "ObjectExpression": true 
                    } 
            }
        ]
    }
}